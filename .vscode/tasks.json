{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "process",
			"command": "tools/build/build",
			"windows": {
				"command": ".\\tools\\build\\build.bat"
			},
			"options": {
				"env": {
					"DM_EXE": "${config:dreammaker.byondPath}"
				}
			},
			"problemMatcher": [
				"$dreammaker",
				"$tsc",
				"$eslint-stylish"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOn": "dm: reparse",
			"label": "Build All"
		},
		{
			"type": "dreammaker",
			"dme": "phantasmagorica.dme",
			"problemMatcher": [
				"$dreammaker"
			],
			"group": "build",
			"label": "dm: build - phantasmagorica.dme"
		},
		{
			"command": "${command:dreammaker.reparse}",
			"group": "build",
			"label": "dm: reparse"
		}
	]
}
